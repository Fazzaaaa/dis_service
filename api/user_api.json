{
  "openapi": "3.1.0",
  "info": {
    "title": "User Management API",
    "description": "API for managing users like create, update, delete, etc.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/api/register": {
      "post": {
        "description": "Register a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "example": {
                "name": "John Doe",
                "email": "johndoe@gmail.com",
                "password": "rahasia",
                "confirm_password": "rahasia",
                "phone": "081234567890"
              },
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "confirm_password": {
                    "type": "string"
                  },
                  "phone": {
                    "type": "string"
                  }
                },
                "required": ["name", "email", "password", "confirm_password", "phone"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created successfully",
            "content": {
              "application/json": {
                "example": {
                  "data": {
                    "id": "09e4c1ee-66a3-4389-aa9e-2de54fee70f6",
                    "name": "John Doe",
                    "email": "johdoe@gmail.com",
                    "phone": "081234567890",
                    "password": "rahasia",
                    "confirm_password": "rahasia",
                    "created_at": "2021-10-10T00:00:00.000Z",
                    "updated_at": "2021-10-10T00:00:00.000Z",
                    "deleted_at": null
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "example": {
                  "errors": {
                    "email": [
                        "Email is already exists",
                        "Email is not valid",
                        "Email is required"
                    ],
                    "password": [
                        "Password is required",
                        "Password must be at least 8 characters",
                        "Password must contain at least one uppercase letter, one lowercase letter, one number and one special character"
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/login": {
      "post": {
        "description": "Login user",
        "requestBody": {
          "content": {
            "application/json": {
              "example": {
                "email": "johndoe@gmail.com",
                "password": "rahasia"
              },
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User logged in successfully",
            "content": {
              "application/json": {
                "example": {
                  "data": {
                    "token_access": "77f1a70755fb47bcbb398dba0ef15abe",
                    "token_refresh": "77f1a70755fb47bcbb398dba0ef15abe"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Failed to login",
            "content": {
              "application/json": {
                "example": {
                  "errors": {
                    "email": [
                        "Email is not registered"
                    ],
                    "password": [
                        "Password is incorrect"
                    ]
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "example": {
                  "errors": "Email or password is incorrect"
                }
              }
            }
          }
        }
      }
    },
    "/api/user": {
      "get": {
        "description": "Get user profile",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User Profile",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "name": {
                          "type": "string"
                        },
                        "email": {
                          "type": "string"
                        },
                        "phone": {
                          "type": "string"
                        },
                        "created_at": {
                          "type": "string"
                        },
                        "updated_at": {
                          "type": "string"
                        },
                        "deleted_at": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "example": {
                  "errors": "Unauthorized"
                }
              }
            }
          }
        }
      }
    },
    "/api/user": {
      "patch": {
        "description": "Update user",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "example": {
                "name": "John Doe",
                "email": "johndoe@gmail.com",
                "phone": "081234567890"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User updated successfully",
            "content": {
              "application/json": {
                "example": {
                  "data": {
                    "id": "09e4c1ee-66a3-4389-aa9e-2de54fee70f6",
                    "name": "John Doe",
                    "email": "johndoe@gmail.com",
                    "phone": "081234567890",
                    "created_at": "2021-10-10T00:00:00.000Z",
                    "updated_at": "2021-10-10T00:00:00.000Z",
                    "deleted_at": null
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "example": {
                  "errors": "Unauthorized"
                }
              }
            }
          }
        }
      }
    },
    "/api/logout": {
        "delete": {
            "description": "Logout user",
            "parameters": [
            {
                "name": "Authorization",
                "in": "header",
                "required": true,
                "schema": {
                "type": "string"
                }
            }
            ],
            "responses": {
            "200": {
                "description": "User logged out successfully",
                "content": {
                "application/json": {
                    "example": {
                    "message": "User logged out successfully"
                    }
                }
                }
            },
            "401": {
                "description": "Unauthorized",
                "content": {
                "application/json": {
                    "example": {
                    "errors": "Unauthorized"
                    }
                }
                }
            }
            }
        }
    }
  }
}